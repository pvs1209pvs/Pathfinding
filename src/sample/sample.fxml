<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<?import javafx.geometry.Insets?>

<HBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">

    <VBox prefWidth="130" alignment="CENTER" spacing="10">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>

        <Button text="Dij" prefWidth="80" onAction="#startDij"
                style="-fx-background-color: #44d0cd; -fx-text-fill: #ffffff"/>

        <Button text="AStar" prefWidth="80" onAction="#startAStar"
                style="-fx-background-color: #44d0cd; -fx-text-fill: #ffffff"/>
        <Button text="Random" prefWidth="80" onAction="#genRandom"
                style="-fx-background-color: #44d0cd; -fx-text-fill: #ffffff"/>

        <Button text="Clear" prefWidth="80" onAction="#clearButton"
                style="-fx-background-color: #44d0cd; -fx-text-fill: #ffffff"/>

        <Button text="Quit" prefWidth="80" onAction="#quitButton"
                style="-fx-background-color: #44d0cd; -fx-text-fill: #ffffff"/>

        <HBox spacing="5" alignment="CENTER">

            <Button text="+" prefWidth="80" onAction="#incrGridSize"
                    style="-fx-background-color: #44d0cd; -fx-text-fill: #ffffff"/>

            <Button text="-" prefWidth="80" onAction="#decrGridSize"
                    style="-fx-background-color: #44d0cd; -fx-text-fill: #ffffff"/>
        </HBox>

        <Label text="How To" maxWidth="80"
               style="-fx-font-weight: bold; -fx-background-radius: 2;-fx-label-padding: 2; -fx-max-width: 60; -fx-alignment: center"/>
        <TextFlow style="-fx-alignment: center">
            <Text text="Drag mouse to add "/>
            <Text text="Walls " style="-fx-stroke: #564e4e"/>
            <Text text="Hold S + Left Mouse to add "/>
            <Text text="Starting Point " style="-fx-stroke: #60a561"/>
            <Text text="Hold  E+ Left Mouse to add "/>
            <Text text="Finishing Point " style="-fx-stroke: #e34a70"/>
        </TextFlow>

    </VBox>

    <Canvas fx:id="mainCanvas" height="500.0" width="500.0"
            onMouseDragged="#addWall"
            onMouseClicked="#addStartFinish"
            onKeyPressed="#option">
    </Canvas>

</HBox>